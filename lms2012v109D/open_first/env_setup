#! /bin/bash
#******************************************************************************************************************
#     ENVIRONMENT SETUP
#******************************************************************************************************************
# as normal user on linux pc terminal:
# Compiler modified to reflect the supplied source
export AM1808_COMPILER=~/projects/linux-devkit/bin

# Distro modified from Davinci SDK to location of linux kernel and uboot, AKA extras
export AM1808_DISTRO=extra
export AM1808_LINUX=linux-03.20.00.13
export AM1808_UBOOT=uboot-03.20.00.13

export AM1808_UBOOT_DIR=~/projects/${AM1808_DISTRO}/${AM1808_UBOOT}
export AM1808_KERNEL=~/projects/${AM1808_DISTRO}/${AM1808_LINUX}

export AM1808_MODULES=~/projects/lms2012/lms2012/Linux_AM1808/sys/mod

export X86_KERNEL=/lib/modules/$(uname -r)/build
export X86_MODULES=~/projects/lms2012/lms2012/Linux_X86/sys/mod



